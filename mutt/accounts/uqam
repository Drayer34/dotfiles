## IMAP: offlineimap
set mbox_type = Maildir
set folder = "~/mail/uqam"
source ~/.mutt/mailboxes
set spoolfile = "+/INBOX"
set record = "+/Sent"
set postponed = "+/Drafts"
set mbox="+mbox"

## Send options.
set realname='Antoine Laurent'

set sendmail='/usr/bin/msmtp -a uqam'
set from=laurent.antoine@courrier.uqam.ca

## Hook -- IMPORTANT!
account-hook $folder "source ~/.mutt/mailboxes"

## Keybinding ##
macro index gi \
    "<change-folder>=INBOX<enter>" "Go to inbox"
macro index gt \
    "<change-folder>=Sent<enter>" "Go to sent Mail"
macro index gd \
    "<change-folder>=Drafts<enter>" "Go to drafts"
macro index gs \
    "<change-folder>=Junk<enter>" "Go to Spam"

# vim: ft=muttrc
